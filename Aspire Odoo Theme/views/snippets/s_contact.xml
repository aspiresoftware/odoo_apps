<?xml version="1.0" encoding="utf-8" ?>
<odoo> 
   <template id="s_contact" name="Contact Block">
      <section class="snippet_contact bg-white">
         <div class="section-padding">
            <div class="container">
               <div class="row">
                  <div class="col-lg text-center">
                     <div class="contact-form">
                        <div class="card footer-card shadow">
                           <div class="card-body">
                              <div class="row text-center">
                                 <div class="col-sm-12">
                                   <hgroup>
                                    <h1 class="section-title">Contact Us</h1>
                                    <p>For Your Business Requirements</p>
                                      </hgroup>
                                 </div>
                              </div>
                              
                              <form>
                                 <div class="row">
                                    <div class="col-sm-6">
                                       <div class="form-group">
                                          <input type="text" class="form-control" id="exampleFormControlName" placeholder="Name"/>
                                       </div>
                                       <div class="form-group">
                                          <input type="number" class="form-control" id="exampleFormControlPhone" placeholder="Phone"/>
                                       </div>
                                       <div class="form-group">
                                          <input type="text" class="form-control" id="exampleFormControlSkypeId" placeholder="Skype Id"/>
                                       </div>
                                       <div class="form-group">
                                          <input type="text" class="form-control" id="exampleFormControlCompanyName" placeholder="Company Name"/>
                                       </div>
                                       <div class="form-group">
                                          <input type="text" class="form-control" id="exampleFormControlWebsite" placeholder="Website"/>
                                       </div>
                                    </div>
                                    <div class="col-sm-6">
                                       <div class="form-group">
                                          <input type="email" class="form-control" id="exampleFormControlEmail" placeholder="Email"/>
                                       </div>
                                       <div class="form-group">
                                          <!-- <input type="text" class="form-control" id="exampleFormControlServiceRequired" placeholder="Service Required" /> -->
                                           <div class="form-group">
                                             <select class="form-control" id="exampleFormControlServiceRequired">
                                                <option>Service 1</option>
                                                <option>Service 2</option>
                                                <option>Service 3</option>
                                                <option>Service 4</option>
                                                <option>Service 5</option>
                                             </select>
                                          </div>
                                       </div>
                                       <div class="form-group">
                                          <textarea class="form-control" aria-label="With textarea" id="exampleFormControlMessage" placeholder="Message" rows="5"></textarea>
                                       </div>
                                    </div>
                                 </div>
                                 <div class="row">
                                    <div class="col-sm-12">
                                       <button type="button" class="btn bg-primary btn-rounded btn-block ">Submit<i class="fa fa-long-arrow-right ml-1"></i></button>
                                    </div>
                                 </div>
                              </form>
                           </div>
                        </div>
                        <ul class="social-links">
                           <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                           <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                           <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                           <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                           <li><a href="#"><i class="fa fa-skype"></i></a></li>
                        </ul>
                     </div>
                  </div>
                  <div class="col-lg">
                     <button type="button" class="btn bg-primary btn-rounded mb-3 ">Get In Touch<i class="fa fa-long-arrow-right ml-1"></i></button>
                     <div class="row">
                        <div class="col-sm-12">
                           <span class="location-icon shadow-sm"><i class="fa fa-map-marker"></i></span>
                           <p class="contact-info"><span class="font-weight-bold mb-2">Aspire Software Solutions<br/> </span>202, Parishram Complex, Mithakhali Six Roads,<br/> Navrangpura, Ahmedabad, Gujarat, India.</p>
                        </div>
                     </div>
                     <div class="row">
                        <div class="col-sm-12">
                           <div class="contact-details">
                              <div class="d-flex mr-3">
                                 <span class="location-icon shadow-sm"><i class="fa fa-phone"></i></span>
                                 <p class="contact-info">+91 79 2640 9959 (IN)<br/>+91 848 594 5080 (IN - HR)<br/>+1 240 200 7535 (US)</p>
                              </div>
                              <div class="d-flex">
                                 <span class="location-icon shadow-sm"><i class="fa fa-envelope"></i></span>
                                 <p class="contact-info">sales@aspiresoftware.in (Sales)<br/>careers@aspiresoftware.in (Careers)<br/>hello@aspiresoftware.in (General)</p>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
          <div class="bg-footer section-padding text-white">
            <div class="container">
               <div class="row justify-content-end">
                  <div class="col-lg-6 col-md-12 mobile-view-margin">
                   <hgroup>
                      <h1 class="section-title text-white">Other Info</h1>
                   </hgroup>
                     <p class="text-white">Since our founding, Aspire has built a successful business by focusing on a simple yet compelling mission: clients' success is our success. We do so through careful, strategic investments in technology, process, and—most significantly—people.</p>
                     <ul>
                        <li><i class="fa fa-chevron-right mr-2"></i><a href="#" class="color-white">High Quality Standards</a></li>
                        <li><i class="fa fa-chevron-right mr-2"></i><a href="#" class="color-white">Timely Delivery</a></li>
                        <li><i class="fa fa-chevron-right mr-2"></i><a href="#" class="color-white">Transparency</a></li>
                     </ul>
                  </div>
                
                
               </div>
               <hr class="contact-saperator"/>
               <div class="row bottom-logo text-center">
                    <div class="col"><img src="/theme_aspire/static/src/img/b-logo1.png"/></div>
                    <div class="col"><img src="/theme_aspire/static/src/img/b-logo2.png"/></div>
                    <div class="col"><img src="/theme_aspire/static/src/img/b-logo3.png"/></div>
                    <div class="col"><img src="/theme_aspire/static/src/img/b-logo4.png"/></div>
                    <div class="col"><img src="/theme_aspire/static/src/img/b-logo5.png"/></div>
                </div>
            </div>
         </div>
    </section>
   </template>
<template id="place_contact_into_bar" inherit_id="website.snippets" name="Place Contact into bar">
  <xpath expr="//div[@id='snippet_structure']/div[@class='o_panel_body']" position="inside">
    <t t-snippet="theme_aspire.s_contact"
      t-thumbnail="/theme_aspire/static/src/img/snippets_thumbs/s_contacts.jpg"/>
  </xpath>
</template>
</odoo>